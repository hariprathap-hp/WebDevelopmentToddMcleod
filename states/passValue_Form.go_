package main

import (
	"fmt"
	"html/template"
	"log"
	"net/http"
)

func main() {
	http.HandleFunc("/", valForm)
	log.Fatalln(http.ListenAndServe(":8000", nil))
}

func valForm(w http.ResponseWriter, r *http.Request) {
	r.ParseForm()

	tmpl, err := template.ParseFiles("form.gohtml")
	if err != nil {
		fmt.Println(err)
	}

	s := "The value got is " + r.FormValue("q")

	tmpl.Execute(w, s)
}
